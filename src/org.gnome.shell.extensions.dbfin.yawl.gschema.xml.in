<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extension-yawl">
  <schema id="org.gnome.shell.extensions.dbfin.yawl" path="/org/gnome/shell/extensions/dbfin/yawl/">
    <key name="yawl-panel-position" type="s">
      <default>'25'</default>
      <_summary>YAWL-panel position in percentage.</_summary>
      <_description>The position of the left side of the YAWL panel as percentage of the top panel width.</_description>
    </key>
    <key name="move-center" type="b">
      <default>true</default>
      <_summary>Move central panel to the right.</_summary>
      <_description>If true the central panel is moved to the right.</_description>
    </key>
    <key name="hide-activities" type="b">
      <default>true</default>
      <_summary>Hide Activities button.</_summary>
      <_description>If true the Activities button is hidden.</_description>
    </key>
    <key name="preserve-hot-corner" type="b">
      <default>true</default>
      <_summary>Preserve Hot Corner.</_summary>
      <_description>If true the Hot Corner is available even if the Activities button is hidden.</_description>
    </key>
    <key name="panel-background" type="b">
      <default>false</default>
      <_summary>Custom panel background.</_summary>
      <_description>If true the top panel is painted with custom color and opacity.</_description>
    </key>
    <key name="panel-color" type="s">
      <default>'#000000'</default>
      <_summary>Choose custom panel color.</_summary>
      <_description>Custom color to paint the top panel.</_description>
    </key>
    <key name="panel-opacity" type="s">
      <default>'100'</default>
      <_summary>Choose custom panel opacity.</_summary>
      <_description>Custom opacity to paint the top panel.</_description>
    </key>
    <key name="icons-size" type="s">
      <default>'48'</default>
      <_summary>Size of application icons.</_summary>
      <_description>The size of application icons. It is better to be set to a value divisible by 8.</_description>
    </key>
    <key name="icons-faded" type="b">
      <default>true</default>
      <_summary>Use faded icons.</_summary>
      <_description>Whether to use faded icons (like AppMenu button).</_description>
    </key>
    <key name="icons-distance" type="s">
      <default>'20'</default>
      <_summary>Distance between icons (%).</_summary>
      <_description>Distance between two icons as % of the icon size.</_description>
    </key>
    <key name="icons-clip-top" type="s">
      <default>'3'</default>
      <_summary>Clip icons: top (px).</_summary>
      <_description>Clip icons on top (in pixels).</_description>
    </key>
    <key name="icons-clip-bottom" type="s">
      <default>'3'</default>
      <_summary>Clip icons: bottom (px).</_summary>
      <_description>Clip icons on bottom (in pixels).</_description>
    </key>
    <key name="icons-animation-time" type="s">
      <default>'490'</default>
      <_summary>Icons animation time.</_summary>
      <_description>Icons animation time in ms. If 0 then no animation is used.</_description>
    </key>
  </schema>
</schemalist>
