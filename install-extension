#!/bin/bash --
[ ! -d ./zip/ ] || rm -rf ./zip/
./autogen.sh --prefix="$(readlink -f ~/.local)/" --with-local-install=yes && make && make zip-file && make distclean
if [ -d ./zip/ ]; then
  d="$(readlink -f ~/.local)/share/gnome-shell/extensions/yawl@dbfin.com/"
  [ ! -d "$d" ] || rm -rf "$d"
  mkdir -p "$d"
  if [ -d "$d" ]; then
    unzip -q './zip/yawl@dbfin.com.shell-extension.zip' -d "$d"
  fi
fi
